@model UserLoginViewModel


<div class="container">
    <div class="text-center mt-5">
        <h1>Please Enter Your UserName and Password</h1>

    </div>
</div>

<div class="text-danger text-center "><span class="text-danger text-center">@ViewBag.ErrorMessage</span></div>
<div class="text-danger text-center " asp-validation-summary="All"></div>



<div class="d-flex justify-content-center">
    
    <form method="post" asp-controller="User" asp-action="Login">
        
        <div class="mb-3">
            <label for="UserName" class="form-label">User Name</label>
            <input asp-for="UserName" class="form-control" aria-describedby="UserNameHelp" style="width:300px;">

        </div>
        @*<span asp-validation-for="UserName" class="text-danger"></span>*@


        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" style="width:300px;">


        </div>
        @*<span asp-validation-for="Password" class="text-danger"></span>*@

        <div class="mb-3">
            <a class="form-text" href="/user/createuser">Create New User</a>
        </div>





        <button type="submit" class="btn btn-primary">Login</button>
    </form>



</div>

